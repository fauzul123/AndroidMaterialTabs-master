<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="info.androidhive.materialtabs.fragments.TwoFragment">
   <LinearLayout
       android:orientation="vertical"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

       <Button
           android:layout_width="350dp"
           android:layout_height="120dp"
           android:layout_marginTop="20dp"
           android:backgroundTint="@color/a1"
           android:drawableLeft="@drawable/p"
           android:layout_gravity="center"
           android:textColor="#fff"
           android:text="HITUNG PERSEGI PANJANG"
           android:id="@+id/btnpersegipanjang"/>
       <Button
           android:layout_width="350dp"
           android:layout_height="120dp"
           android:textColor="#fff"
           android:backgroundTint="@color/a2"
           android:layout_gravity="center"
           android:drawableLeft="@drawable/j"
           android:layout_marginTop="20dp"
           android:text="HITUNG PERSEGI"
           android:id="@+id/persegi"/>
       <Button
           android:layout_width="350dp"
           android:layout_height="120dp"
           android:layout_marginTop="20dp"
           android:backgroundTint="@color/a3"
           android:layout_gravity="center"
           android:drawableLeft="@drawable/ic_launcher_foreground"
           android:text="HITUNG SEGITIGA"
           android:textColor="#fff"
           android:id="@+id/segitiga"/>
       <Button
           android:layout_width="350dp"
           android:layout_height="120dp"
           android:layout_gravity="center"
           android:textColor="#fff"
           android:backgroundTint="@color/a4"
           android:drawableLeft="@drawable/oa"
           android:layout_marginTop="20dp"
           android:text="HITUNG LINGKARAN"
           android:id="@+id/lingkaran"/>
   </LinearLayout>

</RelativeLayout>
